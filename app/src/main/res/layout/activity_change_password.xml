<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".ChangePasswordActivity">

    <EditText
        android:id="@+id/change_password_old"
        style="@style/edit_white_trans_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:hint="Old Password"
        android:inputType="textPassword"
        android:maxLength="15" />

    <EditText
        android:id="@+id/change_password_new"
        style="@style/edit_white_trans_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="New Password"
        android:inputType="textPassword"
        android:maxLength="15" />

    <EditText
        android:id="@+id/change_password_confirm"
        style="@style/edit_white_trans_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Confirm New Password"
        android:inputType="textPassword"
        android:maxLength="15" />

    <Button
        android:id="@+id/change_password_submit"
        style="@style/button_green_bold_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Submit" />

</LinearLayout>